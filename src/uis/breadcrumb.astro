---
type BreadcrumbLink = { label: string; href: string };
type BreadcrumbProps = { title?: string; links?: BreadcrumbLink[] };

const props = Astro.props as BreadcrumbProps;

const title = props.title ?? "Â¿Quienes somos?";
const links: BreadcrumbLink[] = props.links ?? [
  { label: "Home", href: "/" },
  { label: "Contacto", href: "/#contacto" },
];
---

<section class="bg-gray-50 border-b border-gray-200">
  <div class="container mx-auto px-4 py-10">
    <nav class="text-sm text-gray-600 mb-3" aria-label="Breadcrumb">
      <ol class="flex flex-wrap items-center gap-2">
        {links.map((link: BreadcrumbLink, i: number) => (
          <li class="flex items-center gap-2">
            <a href={link.href} class="hover:text-orange-500 transition-colors font-medium">{link.label}</a>
            {i < links.length - 1 && <span class="text-gray-400">/</span>}
          </li>
        ))}
      </ol>
    </nav>

    <h1 class="text-3xl md:text-4xl font-bold text-gray-900">{title}</h1>
  </div>
</section>
