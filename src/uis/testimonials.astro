---
import { Card, CardFooter, CardHeader } from "../components/card";
import { Star, Users } from "lucide-react";

const testimonials = [
  {
    name: "María García",
    location: "Ciénega, Boyacá",
    text: "El servicio se mantiene estable para clases y trabajo en casa. La instalación fue rápida y la atención muy clara.",
    rating: 5,
  },
  {
    name: "Carlos Rodríguez",
    location: "Ramiriquí, Boyacá",
    text: "Buena velocidad para el día a día del hogar. Podemos usar varios dispositivos sin interrupciones.",
    rating: 5,
  },
  {
    name: "Ana Martínez",
    location: "Tibaná, Boyacá",
    text: "Ahora las videollamadas y el streaming van fluidos. El soporte responde cuando se necesita.",
    rating: 5,
  },
];
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4">
		<div class="text-center mb-16">
		<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Lo que dicen nuestros clientes</h2>
		<p class="text-gray-600 text-lg">Miles de familias ya disfrutan de Jeferson AFE</p>
		</div>
		<div class="grid md:grid-cols-3 gap-8">
		{testimonials.map((testimonial) => (
				<Card key={testimonial.name} className="border-0 shadow-lg bg-white" client:load>
				<CardHeader client:load>
						<div class="flex gap-1 mb-4">
						{[...Array(testimonial.rating)].map((_, i) => (
								<Star key={i} className="w-5 h-5 fill-orange-400 text-orange-400" client:load />
						))}
						</div>
						<p class="text-gray-600 italic">"{testimonial.text}"</p>
				</CardHeader>
				<CardFooter className="border-t pt-4" client:load>
						<div class="flex items-center gap-3">
						<div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
								<Users className="w-6 h-6 text-orange-500" client:load />
						</div>
						<div>
								<div class="font-semibold text-gray-900">{testimonial.name}</div>
								<div class="text-sm text-gray-500">{testimonial.location}</div>
						</div>
						</div>
				</CardFooter>
				</Card>
		))}
		</div>
	</div>
</section>