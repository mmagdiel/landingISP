---
const steps = [
  "01. Conexión Estable",
  "02. Velocidad Increíble",
  "03. Velocidad Simétrica",
  "04. Amplia Cobertura",
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {steps.map((step) => (
          <div class="rounded-2xl border border-gray-200 bg-gray-50 px-6 py-6 font-semibold text-gray-900">
            {step}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
