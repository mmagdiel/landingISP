---
import Layout from "../layouts/main.astro";
import Header from "../uis/header.astro";
import Footer from "../uis/footer.astro";

import Breadcrumb from "../uis/breadcrumb.astro";
import ServicesSteps from "../uis/services-steps.astro";
import ServicesOffer from "../uis/services-offer.astro";
import ServicesTestimonials from "../uis/services-testimonials.astro";

const title = "Amplia Cobertura";
const links = [{ label: "Home", href: "/" },{ label: "Services", href: "/services/" }]
---

<Layout>
  <div class="min-h-screen bg-white">
    <Header />
    <Breadcrumb title={title} links={links} />
    <ServicesSteps />
    <ServicesOffer />
    <ServicesTestimonials />
    <Footer />
  </div>
</Layout>
